     7                                  asum:
     8                                  	section .text	
     9                                  ;calculate the sum
    10 00000000 4889F1                  		mov	rcx, rsi	;array length
    11 00000003 4889FB                  		mov	rbx, rdi	;address of array
    12 00000006 41BC00000000            		mov	r12, 0
    13 0000000C F2420F1004E3            		movsd	xmm0, qword [rbx+r12*8]
    14 00000012 48FFC9                  		dec rcx	 ; one loop less, first element already in xmm0
    15                                  	sloop:	
    16 00000015 49FFC4                  		inc r12
    17 00000018 F2420F5804E3            		addsd	xmm0, qword [rbx+r12*8]
    18 0000001E E2F5                    		loop sloop
    19 00000020 C3                      ret		; return sum in xmm0
